{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "composite": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  }
}

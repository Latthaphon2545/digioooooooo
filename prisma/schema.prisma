generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String     @unique
  hashedPassword String
  role           Role
  status         StatusUser @default(PENDING)
  contact        String
  token          Json?
  history        History[]
}

enum StatusUser {
  ACTIVE
  INACTIVE
  PENDING
  RESTRICTED
}

enum Role {
  ADMIN
  OPERATOR
  CALLCENTER
}

model Product {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  serialNumber String        @unique
  model        Model         @relation(fields: [modelId], references: [id])
  modelId      String        @db.ObjectId
  history      History[]
  merchant     Merchant?     @relation(fields: [merchantId], references: [id])
  merchantId   String?       @db.ObjectId
  status       StatusProduct @default(INSTOCK)
  bank         Bank?         @relation(fields: [bankId], references: [id])
  bankId       String?       @db.ObjectId
}

enum StatusProduct {
  INSTOCK
  LOST
  DAMAGED
  REPARING
  WAITREPAIR
  INSTALLED
  INSTALLING
}

model Model {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  series      String
  information Json?
  status      Json
  image       String?
  product     Product[]
}

model History {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  product     Product       @relation(fields: [productId], references: [serialNumber])
  productId   String
  description String
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @db.ObjectId
  imageProve  String[]
  createdAt   DateTime      @default(now())
  category    StatusProduct
}

model Merchant {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  address String
  contact String
  product Product[]
}

model Bank {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  image   String
  product Product[]
}

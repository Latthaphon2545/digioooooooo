generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String     @unique
  hashedPassword String
  role           Role
  status         StatusUser
  contact        String
  token          Json?
  history        History[]
}

enum StatusUser {
  ACTIVE
  INACTIVE
  PENDING
  RESTRICTED
}

enum Role {
  ADMIN
  OPERATOR
  CALLCENTER
}

model Product {
  serialNumber String        @id @map("_id")
  model        Model         @relation(fields: [modelId], references: [id])
  modelId      String        @db.ObjectId
  history      History[]
  historyId    String[]
  merchant     Merchant?
  status       StatusProduct
  bank         Bank?
}

enum StatusProduct {
  INSTOCK
  LOST
  DAMAGED
  REPARING
  WAITREPAIR
  INSTALLED
  INSTALLING
}

enum Bank {
  KBANK
  SCB
}

model Model {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  series      String
  information Json?
  status      Json
  product     Product[]
}

model History {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  product      Product  @relation(fields: [productId], references: [serialNumber])
  productId    String
  description  String
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @db.ObjectId
  imageProve   String[]
  createdAt    DateTime @default(now())
  category     Category
}

enum Category {
  CHECKSTOCK
  PREPARE
  SUCCESS
  BROKEN
}

model Merchant {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  address   String
  contact   String
  product   Product @relation(fields: [productId], references: [serialNumber])
  productId String  @unique
}
